<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 4.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.dialect">org.hibernate.dialect.DerbyDialect</property>
    <property name="hibernate.connection.driver_class">org.apache.derby.jdbc.ClientDriver</property>
    <property name="hibernate.connection.url">jdbc:derby://localhost:1527/Practica1</property>
    <property name="hibernate.connection.username">gerard</property>
    <property name="hibernate.connection.password">1234</property>
    <property name="connection.pool_size">1</property>
    <property name="show_sql">true</property> 
    <property name="hbm2ddl.auto">create-drop</property>
    <mapping class="Hibernate.Usuario" />
  </session-factory>
</hibernate-configuration>
